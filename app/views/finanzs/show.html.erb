<%- model_class = Finanz -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Title) %>:</strong></dt>
  <dd><%= @finanz.Title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Datum) %>:</strong></dt>
  <dd><%= @finanz.Datum %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Zahlungstyp) %>:</strong></dt>
  <dd><%= @finanz.Zahlungstyp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Wert) %>:</strong></dt>
  <dd><%= @finanz.Wert %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              finanzs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_finanz_path(@finanz), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              finanz_path(@finanz),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
